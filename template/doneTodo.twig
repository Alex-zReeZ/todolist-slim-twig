<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style.css">

    <title>Document</title>
</head>
<body>
<h1 class="title"> Todos done </h1>
<div class="go-back-button">
    <form action="/search" method="get">
        <label>
            <input type="text" name="searchTodo" placeholder="Search a todo">
        </label>
        <button type="submit" name="search" class="btn btn-add">Search</button>
    </form>

    <form action="/todo" method="get">
        <button class="btn btn-back " type="submit" name="goBack">See all todos</button>
    </form>
</div>

<ul class="todo-list">
    {% for done in dones %}
        <li class="todo-item">
            <form action="/todo/undone" method="post">
                <button type="submit" name="undone" class="btn btn-add" value="{{ done.id }}"> Undone </button>
            </form>
            <form action="/todo/modify" class="todo-item-form" method="post">
                <label>
                    <input type="text" value="{{ done.name|e }}" class="hide-input">
                    <input type="hidden" name="todoId" value="{{ done.id }}">
                </label>
            </form>

            <form action="/todo/done/remove" method="post">
                <input type="hidden" name="removeTodoDone" value="{{ done.id }}">
                <button class="btn btn-reset" type="submit" name="removeTodoButton">Remove todo</button>
            </form>
        </li>
    {% endfor %}
</ul>


</body>
</html>
